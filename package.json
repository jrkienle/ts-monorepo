{
  "name": "@jrkienle/ts-monorepo",
  "version": "0.0.0",
  "description": "A monorepo for all of my TypeScript projects",
  "scripts": {
    "build": "bunx --bun turbo run build",
    "clean": "bunx --bun turbo run clean && rm -rf .turbo node_modules && bun install",
    "dev": "bunx --bun turbo run dev",
    "format": "bunx --bun prettier . --write --config ./packages/config/.prettierrc.js",
    "lint": "bunx --bun eslint && bunx --bun prettier . --check --config ./packages/config/.prettierrc.js",
    "test": "bun test",
    "typecheck": "bunx --bun turbo run typecheck"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "eslint": "9.x",
    "prettier": "^3.3.2",
    "turbo": "^2.0.6"
  },
  "packageManager": "bun@1.1.17",
  "prettier": "./packages/config/.prettierrc.js",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ]
}
